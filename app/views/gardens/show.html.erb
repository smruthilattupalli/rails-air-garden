<div class="container pb-5 minimum-height">

  <div class="row">
    <% if @garden.user == current_user %>
      <div class="col-12">
    <% else %>
      <div class="col-6">
    <% end %>
      <p class="mt-3" style="font-size: 22px;"><%= link_to "<< Back to gardens", gardens_path , id: "link" %></p>
      <div class="card-trip card-trip-show">
        <% if @garden.photo.blank? %>
        <div class="card-category">
          <h1 style="color: black; margin-right: 140px; margin-bottom: 338px;"> <%=  @garden.title %> </h1>
        </div>
        <% else %>
        <div class="card-category card-category-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @garden.photo  %>')">
          <h1> <%= @garden.title %> </h1>
        </div>
        <% end  %>
        <div class="card-trip-infos">
          <div class="card-trip-show">
            <div class="card-trip-rating">
            <% 5.times do %>
            <i id="card-trip-stars" class="fas fa-star"></i>
            <% end %>
            </div>
            <p class="mb-4" style="margin-left: 10px; margin-right: 80px; margin-top: 20px;"><%= @garden.description %></p>
            <div class="d-flex w-120 align-items-center">
              <i class="fas fa-map-marker-alt"></i><p><%= @garden.location %></p>
            </div>
            <div class="d-flex w-50 align-items-center">
             <i class="fas fa-users"></i><p><%= @garden.capacity %></p>
           </div>
           <div class="d-flex w-50 align-items-center">
             <i class="fas fa-ruler-combined"></i><p><%= @garden.size %>m2</p>
           </div>
         </div>
         <div class="price-tag-wrap-show">
          <div class="price-tag d-flex justify-content-center">
            <div class="price-tag-content">
              <h3 class="mb-0 font-weight-bolder" style="font-size: 18px;"> <%= "#{@garden.price} â‚¬" %></h3>
              <h3 class="mt-0" style="font-size: 18px;">/Day</h3>
            </div>
          </div>
        </div>
        <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user-avatar" />
      </div>
    </div>
  </div>

  <% if @garden.user != current_user %>
    <div class="col-6" style="margin-top: 65px;">

      <div class="card-trip card-trip-dates ml-5">
        <h1 style="font-size: 24px;"> Booking dates </h1>
        <%= render "bookings/new", garden: @garden, booking: @booking%>

      </div>
    </div>
  <% end %>
</div>
</div>
